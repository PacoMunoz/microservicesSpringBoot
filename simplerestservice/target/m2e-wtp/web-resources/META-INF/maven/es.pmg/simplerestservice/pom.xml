<project xmlns="http://maven.apache.org/POM/4.0.0"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
	<modelVersion>4.0.0</modelVersion>
	<groupId>es.pmg</groupId>
	<artifactId>simplerestservice</artifactId>
	<packaging>war</packaging>
	<version>1.0</version>
	<name>simplerestservice Maven Webapp</name>
	<url>http://maven.apache.org</url>
	<properties>
		<jackson-version>2.6.3</jackson-version>
		<servlet-version>3.1.0</servlet-version>
		<jetty-maven-plugin.version>9.3.7.v20160115</jetty-maven-plugin.version>
		<jetty.http.port>8080</jetty.http.port>
	</properties>
	<dependencies>
		<dependency>
			<groupId>junit</groupId>
			<artifactId>junit</artifactId>
			<version>3.8.1</version>
			<scope>test</scope>
		</dependency>
		<dependency>
			<groupId>javax.servlet</groupId>
			<artifactId>javax.servlet-api</artifactId>
			<version>${servlet-version}</version>
		</dependency>
		<dependency>
			<groupId>com.fasterxml.jackson.core</groupId>
			<artifactId>jackson-databind</artifactId>
			<version>${jackson-version}</version>
		</dependency>
	</dependencies>
	<build>
		<finalName>simplerestservice</finalName>
		<plugins>
			<plugin>
				<groupId>org.eclipse.jetty</groupId>
				<artifactId>jetty-maven-plugin</artifactId>
				<version>${jetty-maven-plugin.version}</version>
				<configuration>
					<httpConnector>
						<!--host>localhost</host -->
						<port>${jetty.http.port}</port>
					</httpConnector>
				</configuration>
			</plugin>
		</plugins>
	</build>
</project>
